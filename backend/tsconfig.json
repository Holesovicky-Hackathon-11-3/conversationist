{
  "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
  "include": [
    "./src/*"
, "src/services/gpt_api.ts", "src/services/whisper_api.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
